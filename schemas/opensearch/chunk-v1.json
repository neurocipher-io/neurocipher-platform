{
  "index_patterns": ["nc-chunk-v1-*"] ,
  "template": {
    "settings": {
      "index": {
        "number_of_shards": 2,
        "number_of_replicas": 1
      }
    },
    "mappings": {
      "properties": {
        "account_id":         { "type": "keyword" },
        "chunk_id":           { "type": "keyword" },
        "source_document_id": { "type": "keyword" },
        "data_source_id":     { "type": "keyword" },
        "ord":                { "type": "integer" },
        "text":               { "type": "text" },
        "tags":               { "type": "keyword" },
        "created_at":         { "type": "date" },
        "retention_class":    { "type": "keyword" },
        "model_key":          { "type": "keyword" }
      }
    }
  }
}
